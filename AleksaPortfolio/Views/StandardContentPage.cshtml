@inject AleksaPortfolio.Models.Interfaces.IModuleConverter ModuleConverter
@using AleksaPortfolio.Models.Global
@using AleksaPortfolio.Models.Model
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits UmbracoViewPage<StandardContentPage>
@{
	var layoutModel = new LayoutModel(Umbraco.AssignedContentItem);
	ViewData["LayoutModel"] = layoutModel;
	Layout = "MainTemplate.cshtml";
}

@if(Model.Modules != null && Model.Modules.Any())
{
	<div class="container px-5 my-5">
		@foreach(var module in Model.Modules)
		{
			@await Html.RenderModuleAsync(module, ModuleConverter)
		}
	</div>
}

@if(Model.CallToActionCards != null && Model.CallToActionCards.Any())
{
	foreach(var card in Model.CallToActionCards)
	{
		@await Html.RenderModuleAsync(card, ModuleConverter)
	}
}
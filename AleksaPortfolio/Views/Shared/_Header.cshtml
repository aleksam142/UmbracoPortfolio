@model AleksaPortfolio.Models.Global.HeaderLayout

<nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
    <div class="container px-5">
        @if(Model.MainLink != null){
            <a class="navbar-brand" href="@Model.MainLink.Url"><span class="fw-bolder text-primary">@Model.MainLink.Name</span></a>
        }
        @if(Model.Links != null && Model.Links.Any()){
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 small fw-bolder">
                    @foreach(var link in Model.Links){
                        <li class="nav-item"><a class="nav-link" href="@link.Url">@link.Name</a></li>
                    }
                </ul>
            </div>
        }
    </div>
</nav>